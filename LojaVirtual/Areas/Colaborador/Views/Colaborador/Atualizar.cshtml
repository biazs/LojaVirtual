@model LojaVirtual.Models.Colaborador
@{
    ViewData["Title"] = "Atualizar";
}

<h1>Atualizar</h1>



<form method="post">
    <input asp-for="Id" type="hidden" />
    <input asp-for="Tipo" type="hidden" />

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" placeholder="Digite o nome do colaborador">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="Digite o email do colaborador">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-info">Voltar</a>
</form>